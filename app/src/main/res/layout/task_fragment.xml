<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_view_label_add_task"
        android:id="@+id/text_view_label_add_task"
        android:layout_weight="0.02"
        android:gravity="center|center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_new_task"
        android:layout_weight="0.02"
        android:text="@string/edit_text_new_task"
        android:hint="@string/edit_text_new_task_hint"
        android:paddingLeft="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_task"
        android:id="@+id/button_add_task"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02" />
</LinearLayout>